#include <stdio.h>
#include <math.h>

int main()
{
    float f, x;
    printf("Ingresa un valor para x: "); // Se solicita al usuario que ingrese un valor para x
    scanf("%f", &x); // Se guarda el valor ingresado en la variable x

    /* Selección del rango donde se encuentra x */
    if (x <= 0.0)
        f = -pow(x, 2) - x;
    else
        f = -pow(x, 2) + 3 * x;

    printf("f(%.1f) = %.3f\n", x, f); // Se imprime el valor de la función f(x) para el valor ingresado de x

    return 0;
}
